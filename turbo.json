{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "globalEnv": [
    "DATABASE_URL",
    "ENCRYPTION_KEY",
    "TAVILY_API_KEY",
    "LANGCHAIN_TRACING_V2",
    "LANGCHAIN_API_KEY",
    "INNGEST_SIGNING_KEY",
    "INNGEST_EVENT_KEY",
    "RESEND_API_KEY",
    "COACH_FROM_EMAIL",
    "COACH_GAME_PLAN_CRON",
    "COACH_DEADLINE_CHECK_CRON",
    "COACH_MICRO_TASK_CHECK_CRON"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
